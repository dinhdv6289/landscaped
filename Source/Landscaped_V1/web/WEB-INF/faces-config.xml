<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <managed-bean>
        <managed-bean-name>productBean</managed-bean-name>
        <managed-bean-class>Landscaped.Beans.ProductBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>accountBean</managed-bean-name>
        <managed-bean-class>Landscaped.Beans.AccountBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sDetails</from-outcome>
            <redirect/>
            <to-view-id>/productDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>sCart</from-outcome>
            <redirect/>
            <to-view-id>/shoppingCart.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>sProduct</from-outcome>
            <to-view-id>/product.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>shoppingCartBean</managed-bean-name>
        <managed-bean-class>Landscaped.Beans.ShoppingCartBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/shoppingCart.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sProduct</from-outcome>
            <redirect/>
            <to-view-id>/product.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>sIndex</from-outcome>
            <redirect/>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/product.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sCart</from-outcome>
            <redirect/>
            <to-view-id>/shoppingCart.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sIndex</from-outcome>
            <redirect/>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>orderBean</managed-bean-name>
        <managed-bean-class>Landscaped.Beans.OrderBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>orderDetailsBean</managed-bean-name>
        <managed-bean-class>Landscaped.Beans.OrderDetailsBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>categoryBean</managed-bean-name>
        <managed-bean-class>Landscaped.Beans.CategoryBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/template/userTemplate.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sProduct</from-outcome>
            <redirect/>
            <to-view-id>/product.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>feedBackBean</managed-bean-name>
        <managed-bean-class>Landscaped.Beans.FeedBackBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
